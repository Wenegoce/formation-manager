{
  "navigationFallback": { "rewrite": "/index.html" },
  "routes": [
    { "route": "/formateur/*", "allowedRoles": ["authenticated"] },
    { "route": "/api/*", "allowedRoles": ["anonymous"] }
  ],
  "responseOverrides": {
    "401": {
      "statusCode": 302,
      "redirect": "/.auth/login/aad?post_login_redirect_uri=/formateur"
    }
  }
}
